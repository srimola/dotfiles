# AMP Aliases
alias a="amp"
alias as="amp sync"
alias aw="amp watch"
alias acon="amp connect"
alias asc="amp sandbox-create"
alias prodconfig="cp config/config.prod.yml config/config.sandbox.yml"

# Vaprobash
alias vaprobash="curl -L http://bit.ly/vaprobash > Vagrantfile"

# Selenium
alias selenium="java -jar ~/Code/selenium-server-standalone.jar"

# Colordiff
alias diff=colordiff

# Speedtest
alias speedtest=speedtest-cli

# PHP Artisan
alias phart="php artisan "

# vtop https://github.com/MrRio/vtop
alias top="vtop"

# Vagrant
alias v="vagrant "

# Git aliases
alias ghist="git log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short"

# Deploy
alias deploy="node deploy"

# General
alias h="\history -E"
alias zshrc="vim ~/.zshrc"
alias vimrc="vim ~/.vimrc"

# Lighthouse
alias lh="lighthouse --view --chrome-flags=\"--headless\" "
